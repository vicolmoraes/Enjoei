<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <FrameLayout
        android:id="@+id/fl_index_paginas"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_constraintBottom_toTopOf="@+id/v_index_separador"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/v_index_separador"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/gray_F4F2F0"
        app:layout_constraintBottom_toTopOf="@+id/btv_index_footer" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/btv_index_footer"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="0dp"
        android:layout_marginStart="0dp"
        app:itemBackground="@null"
        app:itemIconTint="@color/gray_5B5855"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:menu="@menu/menu" />

</android.support.constraint.ConstraintLayout>